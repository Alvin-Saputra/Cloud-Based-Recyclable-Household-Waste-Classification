<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CloudBasedRecyclableHouseholdWasteClassification" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/base_color_600</item>
        <item name="colorPrimaryVariant">@color/base_color_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/base_color_300</item>
        <item name="colorSecondaryVariant">@color/base_color_800</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->




    </style>

    <color name="background_color">@color/white</color>
    <color name="background_color_variant2">@color/black</color>

    <style name="Heading1">
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/inter_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="HeadingL">
        <item name="android:textSize">32sp</item>
        <item name="fontFamily">@font/inter_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="HeadingXL">
        <item name="android:textSize">40sp</item>
        <item name="fontFamily">@font/inter_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Heading2">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/inter_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Heading3">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/inter_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Parahraph_md">
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="Parahraph_sm">
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="Parahraph_xm">
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="Parahraph_xxm">
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/black</item>

    </style>


    <style name="Theme.MyApp.NoActionBar" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/base_color_600</item>  <!-- Primary Color -->
        <item name="colorPrimaryVariant">@color/base_color_700</item>  <!-- Primary Variant Color -->
        <item name="colorOnPrimary">@color/white</item>  <!-- On Primary Color -->
        <item name="colorSecondary">@color/base_color_300</item>  <!-- Secondary Color -->
        <item name="colorSecondaryVariant">@color/base_color_800</item>  <!-- Secondary Variant Color -->
        <item name="colorOnSecondary">@color/black</item>  <!-- On Secondary Color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item> <!-- Status Bar Color -->
    </style>


    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/base_color_700</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo_splash_screen</item>
        <item name="postSplashScreenTheme">@style/Theme.CloudBasedRecyclableHouseholdWasteClassification</item>
    </style>

</resources>