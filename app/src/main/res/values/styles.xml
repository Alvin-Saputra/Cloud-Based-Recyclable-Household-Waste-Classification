    <style name="MoreRoundedImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>


    <style name="ButtonStyles">
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
