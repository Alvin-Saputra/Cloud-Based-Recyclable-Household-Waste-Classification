<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for Night mode -->
    <style name="Theme.CloudBasedRecyclableHouseholdWasteClassification.Night" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="colorPrimary">@color/base_color_700</item>
        <item name="colorPrimaryVariant">@color/base_color_800</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color (teal, softened for night mode). -->
        <item name="colorSecondary">@color/teal_700</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Background color for night mode to match with green theme -->
        <item name="android:colorBackground">@color/black</item>

        <!-- Text colors for readability in night mode. -->
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/base_color_300</item>
        <item name="android:textColorHint">@color/base_color_200</item>

        <!-- Colors for background elements. -->
        <item name="colorOnBackground">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
    </style>
</resources>
